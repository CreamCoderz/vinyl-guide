<h1>New release</h1>

<% form_for(@release) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :artist %><br/>
      <%= f.text_field :artist %>
    </p>
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :year %><br/>
      <%= f.text_field :year %>
    </p>
    <p>
      <%= f.label :label %><br/>
      <%= f.text_field :label %>
    </p>
    <p>
      <%= f.label :matrix_number %><br/>
      <%= f.text_field :matrix_number %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back', releases_path %>