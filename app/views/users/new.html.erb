<h2>Create User Account</h2>

<% form_for @user do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.submit 'Create Account' %>
    </p>
<% end %>