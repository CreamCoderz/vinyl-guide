<div class="container">
    <h1>Editing
        <% @record.name %></h1>
    <% form_for(@record) do |f| %>

        <%= f.error_messages %>

        <p>
            <%= f.label :name %><br/>
            <%= f.text_field :name %>
        </p>

        <p>
            <%= f.label :description %><br/>
            <%= f.text_field :description %>
        </p>

        <p>
            <%= f.label :date %><br/>
            <%= f.date_select :date %>
        </p>

        <p>
            <%= f.submit 'Update', "class" => "button" %>
        </p>
    <% end %>

    <span class="controls">
        <%= link_to 'Show', @record %> |
        <%= link_to 'Back', records_path %>
    </span>
</div>