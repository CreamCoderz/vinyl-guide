<h2>Create an Account</h2>

<ol>
  <li>&bull; Contribute to the knowledge base</li>
  <li>&bull; Voice your opinions</li>
  <li>&bull; Track your favorites</li>
</ol>

<%= form_for resource_name, resource, :url => registration_path(resource_name) do |f| -%>
  <%= full_error_messages(resource) %>
  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :username %></p>
  <p><%= f.text_field :username %></p>

  <p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %></p>
  <p><%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up" %></p>
<% end -%>

<p>Note: Your email will NEVER be sold or displayed.</p>
<p>Your password is encrypted and unknown to site administrators.</p>

<p>Already have an account? <%= link_to 'Sign in!', new_user_session_path %></p>
