<div class="header">
    <div class="logo">Roots Vinyl Guide</div>
    <div class="nav">
        <div>
            <a href="/">HOME</a>
            <a href="/all/1">ALL</a>
            <a href="/lps/1">LPS</a>
            <a href="/eps/1">EPS</a>
            <a href="/singles/1">SINGLES</a>
            <a href="/other/1">OTHER</a>

            <form name="search" action="/search" method="get">
                <input name="q" id="q" value=""/>
                <input type="submit" value="SEARCH"/>
            </form>
        </div>
    </div>

    <% if @sortable_base_url %>
        <div>
            <% if @order_param.nil? or 'enddate'.casecmp(@order_param) == 0 %>
                <span id="enddate">END DATE</span>
            <% else %>
                <span id='enddate'><a href="<%= "#{@sortable_base_url}&order=enddate" %>">END DATE</a></span>
            <% end %>
            <% if @order_param and 'price'.casecmp(@order_param) == 0 %>
                <span id='price'>PRICE</span>
            <% else %>
                <span id='price'><a href="<%= "#{@sortable_base_url}&order=price" %>">PRICE</a></span>
            <% end %>
        </div>
    <% end %>
</div>