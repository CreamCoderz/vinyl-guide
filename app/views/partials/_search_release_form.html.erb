<label>Find Releases</label>
<form name="search" action="<%= search_releases_path %>" method="get">
  <input name="q" id="release-finder" value=""/>
</form>

<script type="text/javascript">
    $(document).ready(function() {
        EbayItem.init("<%=ebay_item.id%>", "<%= form_authenticity_token %>");
        new AutoCompleter("release-finder", "/releases/search", "release", EbayItem.categorize, EbayItem.linkTextBuilder);
    });
</script>