<% sort ||= nil %>
<% order ||= nil %>
<% base_url ||= "" %>
<% if prev_link %>
    <a class="prev" href="<%=
        "#{append_query_params(base_url,
                               [["sort", sort],
                                ["order", order],
                                ["page", prev_link]])}" %>">&lt; Prev</a>
<% else %>
    &lt; Prev
<% end %>
    &nbsp;|&nbsp;
<% if next_link %>
    <a class="next" href="<%=
        "#{append_query_params(base_url,
                               [["sort", sort],
                                ["order", order],
                                ["page", next_link]])}" %>">Next &gt;</a>
<% else %>
    Next &gt;
<% end %>