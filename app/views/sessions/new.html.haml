%h2 Sign in
= form_for resource, :url => session_path(resource_name) do |f|
  = hidden_field_tag :redirect_url, @redirect_url
  %p= f.label :email
  %p= f.text_field :email
  %p= f.label :password
  %p= f.password_field :password

  - if devise_mapping.rememberable?
    %p
      = f.check_box :remember_me
      = f.label :remember_me

  %p= f.submit "Sign in"

%p= "No Account? #{link_to("Sign Up", new_user_registration_path)} Now!".html_safe
%p= link_to("Forgot your password?", new_user_password_path)
%p= link_to("Didn't receive confirmation instructions?", new_user_confirmation_path)